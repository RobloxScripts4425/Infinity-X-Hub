local player = game.Players.LocalPlayer
local character = player.Character or player.CharacterAdded:Wait()
local hrp = character:WaitForChild("HumanoidRootPart")

while true do
    for _, object in pairs(workspace:GetChildren()) do
        if object:IsA("Model") and object:FindFirstChild("PrimaryPart") and not object.PrimaryPart.Anchored then
            local distance = (hrp.Position - object.PrimaryPart.Position).magnitude
            
            if distance > 5 then
                object:SetPrimaryPartCFrame(hrp.CFrame * CFrame.new(0, 0, -distance + 5))
            end
        end
    end
    wait(0.1)
end
