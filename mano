local OrionLib = loadstring(game:HttpGet(('https://raw.githubusercontent.com/shlexware/Orion/main/source')))()

-- T√≠tulo do script hub
local Window = OrionLib:MakeWindow({Name = "- üî•Fire hubüî•| Brookhaven RPüè° | -", HidePremium = false, SaveConfig = False, ConfigFolder = "FireCfg",})

