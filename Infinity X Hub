local OrionLib = loadstring(game:HttpGet(('https://raw.githubusercontent.com/shlexware/Orion/main/source')))()
local Window = OrionLib:MakeWindow({Name = "Infinity X Hub", HidePremium = false, SaveConfig = true, ConfigFolder = "Infinity"})

local Players = game:GetService("Players")
local LocalPlayer = Players.LocalPlayer
local flying = false
local flinging = false
local BodyGyro, BodyVelocity
local spinSpeed = 0
local defaultWalkSpeed = 16
local defaultJumpPower = 50

local function Fly()
    BodyGyro = Instance.new("BodyGyro")
    BodyVelocity = Instance.new("BodyVelocity")

    BodyGyro.P = 9e4
    BodyGyro.maxTorque = Vector3.new(9e9, 9e9, 9e9)
    BodyGyro.CFrame = LocalPlayer.Character.HumanoidRootPart.CFrame

    BodyVelocity.Velocity = Vector3.new(0, 0, 0)
    BodyVelocity.MaxForce = Vector3.new(9e9, 9e9, 9e9)

    BodyGyro.Parent = LocalPlayer.Character.HumanoidRootPart
    BodyVelocity.Parent = LocalPlayer.Character.HumanoidRootPart

    flying = true
    while flying do
        game:GetService("RunService").Heartbeat:Wait()
        BodyGyro.CFrame = workspace.CurrentCamera.CFrame
        BodyVelocity.Velocity = workspace.CurrentCamera.CFrame.LookVector * 50
        LocalPlayer.Character.Humanoid.PlatformStand = true
    end
end

local function Unfly()
    flying = false
    if BodyGyro then BodyGyro:Destroy() end
    if BodyVelocity then BodyVelocity:Destroy() end
    LocalPlayer.Character.Humanoid.PlatformStand = false
    -- Garantir que o personagem volte ao normal
    LocalPlayer.Character.Humanoid:ChangeState(Enum.HumanoidStateType.GettingUp)
end

local function StartFling()
    flinging = true
    while flinging do
        game:GetService("RunService").Heartbeat:Wait()
        LocalPlayer.Character.HumanoidRootPart.RotVelocity = Vector3.new(4000, 4000, 4000)
        LocalPlayer.Character.HumanoidRootPart.CanCollide = false
    end
end

local function StopFling()
    flinging = false
    LocalPlayer.Character.HumanoidRootPart.RotVelocity = Vector3.new(0, 0, 0)
    LocalPlayer.Character.HumanoidRootPart.CanCollide = true
end

local function StartSpin(speed)
    spinSpeed = speed
    while spinSpeed > 0 do
        game:GetService("RunService").Heartbeat:Wait()
        LocalPlayer.Character.HumanoidRootPart.RotVelocity = Vector3.new(spinSpeed, spinSpeed, spinSpeed)
        LocalPlayer.Character.HumanoidRootPart.CanCollide = false
    end
end

local function StopSpin()
    spinSpeed = 0
    LocalPlayer.Character.HumanoidRootPart.RotVelocity = Vector3.new(0, 0, 0)
    LocalPlayer.Character.HumanoidRootPart.CanCollide = true
end

local PlayerTab = Window:MakeTab({
    Name = "Player",
    Icon = "rbxassetid://4483345998",
    PremiumOnly = false
})

PlayerTab:AddButton({
    Name = "Fly",
    Callback = function()
        if not flying then
            Fly()
        end
    end
})

PlayerTab:AddButton({
    Name = "Unfly",
    Callback = function()
        if flying then
            Unfly()
        end
    end
})

PlayerTab:AddToggle({
    Name = "Fling",
    Default = false,
    Callback = function(state)
        if state then
            StartFling()
        else
            StopFling()
        end
    end
})

PlayerTab:AddTextbox({
    Name = "Spin",
    Default = "Enter Spin Speed",
    TextDisappear = false,
    Callback = function(value)
        spinSpeed = tonumber(value) or 0
    end
})

PlayerTab:AddButton({
    Name = "Start Spin",
    Callback = function()
        StartSpin(spinSpeed)
    end
})

PlayerTab:AddButton({
    Name = "Stop Spin",
    Callback = function()
        StopSpin()
    end
})

PlayerTab:AddTextbox({
    Name = "Speed",
    Default = "Enter Speed Value",
    TextDisappear = false,
    Callback = function(value)
        speedValue = tonumber(value) or defaultWalkSpeed
    end
})

PlayerTab:AddButton({
    Name = "Add Speed",
    Callback = function()
        if speedValue then
            LocalPlayer.Character.Humanoid.WalkSpeed = speedValue
        end
    end
})

PlayerTab:AddTextbox({
    Name = "JumpPower",
    Default = "Enter Jump Power",
    TextDisappear = false,
    Callback = function(value)
        jumpPowerValue = tonumber(value) or defaultJumpPower
    end
})

PlayerTab:AddButton({
    Name = "Add JumpPower",
    Callback = function()
        if jumpPowerValue then
            LocalPlayer.Character.Humanoid.JumpPower = jumpPowerValue
        end
    end
})

PlayerTab:AddButton({
    Name = "Reset Speed And JumpPower",
    Callback = function()
        LocalPlayer.Character.Humanoid.WalkSpeed = defaultWalkSpeed
        LocalPlayer.Character.Humanoid.JumpPower = defaultJumpPower
    end
})

OrionLib:Init()
