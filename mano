-- Trollagens

-- Speed
TrollTab:AddSlider({
    Name = "Poder da velocidade (n√£o funcionando..)",
    Min = 16,
    Max = 500,
    Default = 16,
    Color = Color3.fromRGB(255, 255, 255),
    Increment = 1,
    ValueName = "Velocidade",
    Callback = function(Value)
        local player = game.Players.LocalPlayer
        local character = player.Character or player.CharacterAdded:Wait()
        local humanoid = character:FindFirstChildOfClass("Humanoid")
        
        if humanoid then
            humanoid.WalkSpeed = Value
        end
    end    
})

-- Teleporte
local Section = TrollTab:AddSection({
    Name = "Teleporte, coloque o nome do jogador para teleportar!"
})

TrollTab:AddTextbox({
    Name = "Nome do Jogador para teleportar!",
    Default = "",
    TextDisappear = true,
    Callback = function(playerName)
        local player = game.Players.LocalPlayer
        local targetPlayer = nil
        
        for _, p in ipairs(game.Players:GetPlayers()) do
            if p.Name:sub(1, #playerName):lower() == playerName:lower() then
                targetPlayer = p
                break
            end
        end
        
        if targetPlayer and targetPlayer.Character and targetPlayer.Character:FindFirstChild("HumanoidRootPart") then
            local targetPosition = targetPlayer.Character.HumanoidRootPart.Position
            player.Character.HumanoidRootPart.CFrame = CFrame.new(targetPosition)
        else
            warn("Jogador n√£o encontrado ou inacess√≠vel.")
        end
    end
})

-- Fling do chat gpt e sess√£o



local Section = TrollTab:AddSection({
    Name = "Fling.."
})

local targetPlayerName = ""
local flingConnection = nil
local respawnConnection = nil
local speed = 500 -- Aumenta a velocidade para tornar o fling mais forte
local originalPosition = nil

-- Adiciona uma checkbox para ativar/desativar o fling diretamente
TrollTab:AddToggle({
	Name = "Ativar Fling",
	Default = false,
	Callback = function(state)
		if flingConnection then
			flingConnection:Disconnect()
			flingConnection = nil
		end
		if respawnConnection then
			respawnConnection:Disconnect()
			respawnConnection = nil
		end

		if state then
			-- Encontra o primeiro jogador com o nome que come√ßa com 'targetPlayerName'
			local targetPlayer = nil
			for _, player in pairs(game.Players:GetPlayers()) do
				if string.find(player.Name:lower(), targetPlayerName:lower()) == 1 then
					targetPlayer = player
					break
				end
			end

			if targetPlayer and targetPlayer.Character and targetPlayer.Character:FindFirstChild("HumanoidRootPart") then
				local humanoidRootPart = targetPlayer.Character.HumanoidRootPart
				local player = game.Players.LocalPlayer

				-- Garante que o personagem do jogador local tem uma HumanoidRootPart para flings
				if player.Character and player.Character:FindFirstChild("HumanoidRootPart") then
					local playerRootPart = player.Character.HumanoidRootPart

					-- Salva a posi√ß√£o original
					originalPosition = playerRootPart.CFrame

					-- Conecta um loop para mover o jogador local ao redor do alvo em alta velocidade
					flingConnection = game:GetService("RunService").Heartbeat:Connect(function()
						if targetPlayer.Character and targetPlayer.Character:FindFirstChild("HumanoidRootPart") then
							-- Teletransporta voc√™ para o centro do alvo
							playerRootPart.CFrame = humanoidRootPart.CFrame

							-- Aplica uma for√ßa alta para o "fling"
							playerRootPart.Velocity = Vector3.new(
								math.random(-speed, speed),
								math.random(-speed, speed),
								math.random(-speed, speed)
							)
							
							-- Verifica se o jogador alvo caiu no void (Y < 0)
							if humanoidRootPart.Position.Y < 0 then
								playerRootPart.CFrame = originalPosition
							end
						else
							-- Desconecta se o alvo n√£o estiver mais acess√≠vel
							if flingConnection then
								flingConnection:Disconnect()
								flingConnection = nil
							end
						end
					end)

					-- Detecta quando o alvo renasce e reinicia o fling
					respawnConnection = targetPlayer.CharacterAdded:Connect(function(character)
						-- Atualiza o humanoidRootPart quando o alvo renascer
						wait(1)
						humanoidRootPart = character:WaitForChild("HumanoidRootPart")

						-- Reestabelece a conex√£o de fling quando o alvo renascer
						if not flingConnection then
							flingConnection = game:GetService("RunService").Heartbeat:Connect(function()
								if humanoidRootPart and humanoidRootPart.Parent then
									playerRootPart.CFrame = humanoidRootPart.CFrame
									playerRootPart.Velocity = Vector3.new(
										math.random(-speed, speed),
										math.random(-speed, speed),
										math.random(-speed, speed)
									)
								end
							end)
						end
					end)
				end
			else
				warn("Jogador n√£o encontrado ou inacess√≠vel.")
			end
		end
	end
})

-- Adiciona uma textbox para inserir o nome do jogador na aba Troll
TrollTab:AddTextbox({
	Name = "Nome do Jogador para Fling",
	Default = "",
	TextDisappear = true,
	Callback = function(playerName)
		targetPlayerName = playerName
	end
})

--View e sess√£o 

local Section = TrollTab:AddSection({
    Name = "View.."
})

local viewTargetName = ""
local viewConnection = nil

-- Adiciona uma checkbox para ativar/desativar a view
TrollTab:AddToggle({
	Name = "Ativar View",
	Default = false,
	Callback = function(state)
		local player = game.Players.LocalPlayer
		local camera = game.Workspace.CurrentCamera
		
		-- Desativa a view atual, caso esteja ativa
		if viewConnection then
			viewConnection:Disconnect()
			viewConnection = nil
			camera.CameraSubject = player.Character.Humanoid -- Volta para o pr√≥prio jogador
		end

		if state then
			-- Encontra o jogador cujo nome cont√©m 'viewTargetName'
			local targetPlayer = nil
			for _, p in pairs(game.Players:GetPlayers()) do
				if string.find(p.Name:lower(), viewTargetName:lower()) then
					targetPlayer = p
					break
				end
			end

			if targetPlayer and targetPlayer.Character and targetPlayer.Character:FindFirstChild("Humanoid") then
				-- Conecta a c√¢mera para seguir o jogador alvo
				viewConnection = game:GetService("RunService").RenderStepped:Connect(function()
					if targetPlayer.Character and targetPlayer.Character:FindFirstChild("Humanoid") then
						-- Faz a c√¢mera seguir o humanoide do alvo
						camera.CameraSubject = targetPlayer.Character.Humanoid
						camera.CameraType = Enum.CameraType.Follow
					else
						-- Desconecta se o alvo n√£o estiver mais acess√≠vel
						if viewConnection then
							viewConnection:Disconnect()
							viewConnection = nil
							camera.CameraSubject = player.Character.Humanoid -- Volta para o pr√≥prio jogador
						end
					end
				end)
			else
				warn("Jogador n√£o encontrado ou inacess√≠vel.")
			end
		end
	end
})

-- Adiciona uma textbox para inserir o nome do jogador na aba Troll
TrollTab:AddTextbox({
	Name = "Nome do Jogador para View",
	Default = "",
	TextDisappear = true,
	Callback = function(playerName)
		viewTargetName = playerName
	end
})

--Tamanho de fica pequeno e grande

local Section = OutrosTab:AddSection({
    Name = "bot√£o de fica grande e pequeno.."
})

-- Bot√£o para diminuir o tamanho do personagem
OutrosTab:AddButton({
	Name = "Ficar Pequeno (BETA)",
	Callback = function()
		local player = game.Players.LocalPlayer
		local character = player.Character or player.CharacterAdded:Wait()
		
		for _, part in pairs(character:GetChildren()) do
			if part:IsA("BasePart") then
				part.Size = part.Size * 0.5 -- Diminui o tamanho pela metade
				part.CustomPhysicalProperties = PhysicalProperties.new(1, 0.3, 0.5) -- Ajuste de peso e densidade, se necess√°rio
			end
		end

		-- Ajusta a altura do humanoide para o novo tamanho
		if character:FindFirstChild("Humanoid") then
			character.Humanoid.HipHeight = character.Humanoid.HipHeight * 0.5
		end
	end
})

-- Bot√£o para restaurar o tamanho do personagem
OutrosTab:AddButton({
	Name = "Tamanho Normal (BETA)",
	Callback = function()
		local player = game.Players.LocalPlayer
		local character = player.Character or player.CharacterAdded:Wait()
		
		for _, part in pairs(character:GetChildren()) do
			if part:IsA("BasePart") then
				part.Size = part.Size * 2 -- Restaura ao tamanho original
				part.CustomPhysicalProperties = PhysicalProperties.new(1, 0.3, 0.5) -- Ajuste de peso e densidade, se necess√°rio
			end
		end

		-- Restaura a altura do humanoide para o tamanho original
		if character:FindFirstChild("Humanoid") then
			character.Humanoid.HipHeight = character.Humanoid.HipHeight * 2
		end
	end
})




--Esp


local Players = game:GetService("Players")
local LocalPlayer = Players.LocalPlayer
local Camera = game:GetService("Workspace").CurrentCamera
local RunService = game:GetService("RunService")
local espEnabled = false
local espObjects = {}

-- Fun√ß√£o para criar o ESP
local function CreateESP(player)
    if player == LocalPlayer then return end -- Ignora o pr√≥prio jogador

    local BillboardGui = Instance.new("BillboardGui")
    BillboardGui.Name = "ESP"
    BillboardGui.Adornee = player.Character:WaitForChild("HumanoidRootPart")
    BillboardGui.Size = UDim2.new(0, 200, 0, 50)
    BillboardGui.AlwaysOnTop = true

    -- Nome do jogador
    local NameLabel = Instance.new("TextLabel")
    NameLabel.Name = "NameLabel"
    NameLabel.Text = "Nome: " .. player.Name
    NameLabel.Size = UDim2.new(1, 0, 0.3, 0)
    NameLabel.TextColor3 = Color3.new(1, 1, 1)
    NameLabel.BackgroundTransparency = 1
    NameLabel.TextStrokeTransparency = 0
    NameLabel.Parent = BillboardGui

    -- Dist√¢ncia do jogador
    local DistanceLabel = Instance.new("TextLabel")
    DistanceLabel.Name = "DistanceLabel"
    DistanceLabel.Text = "Dist√¢ncia: calculando..."
    DistanceLabel.Size = UDim2.new(1, 0, 0.3, 0)
    DistanceLabel.Position = UDim2.new(0, 0, 0.3, 0)
    DistanceLabel.TextColor3 = Color3.new(1, 1, 1)
    DistanceLabel.BackgroundTransparency = 1
    DistanceLabel.TextStrokeTransparency = 0
    DistanceLabel.Parent = BillboardGui

    -- Idade da conta
    local AgeLabel = Instance.new("TextLabel")
    AgeLabel.Name = "AgeLabel"
    AgeLabel.Text = "Idade da conta: " .. player.AccountAge .. " dias"
    AgeLabel.Size = UDim2.new(1, 0, 0.3, 0)
    AgeLabel.Position = UDim2.new(0, 0, 0.6, 0)
    AgeLabel.TextColor3 = Color3.new(1, 1, 1)
    AgeLabel.BackgroundTransparency = 1
    AgeLabel.TextStrokeTransparency = 0
    AgeLabel.Parent = BillboardGui

    BillboardGui.Parent = player.Character.HumanoidRootPart
    espObjects[player.Name] = {Gui = BillboardGui, DistanceLabel = DistanceLabel}
end

-- Fun√ß√£o para atualizar a dist√¢ncia
local function UpdateESP()
    if not espEnabled then return end

    for _, player in pairs(Players:GetPlayers()) do
        if player ~= LocalPlayer and player.Character and player.Character:FindFirstChild("HumanoidRootPart") then
            local targetPart = player.Character.HumanoidRootPart
            local distance = (LocalPlayer.Character.HumanoidRootPart.Position - targetPart.Position).Magnitude
            if espObjects[player.Name] then
                espObjects[player.Name].DistanceLabel.Text = "Dist√¢ncia: " .. math.floor(distance) .. " studs"
            end
        end
    end
end

-- Fun√ß√£o para remover ESP
local function RemoveESP()
    for _, esp in pairs(espObjects) do
        if esp.Gui then
            esp.Gui:Destroy()
        end
    end
    espObjects = {}
end

-- Fun√ß√£o para alternar o ESP
local function ToggleESP(state)
    espEnabled = state
    if espEnabled then
        for _, player in pairs(Players:GetPlayers()) do
            if player.Character and player.Character:FindFirstChild("HumanoidRootPart") then
                CreateESP(player)
            end
        end
    else
        RemoveESP()
    end
end

-- Conectando a checkbox ao ToggleESP
OutrosTab:AddToggle({
    Name = "Ativar ESP",
    Default = false,
    Callback = function(state)
        ToggleESP(state)
    end
})

-- Atualizando a dist√¢ncia a cada frame
RunService.RenderStepped:Connect(UpdateESP)

-- Adicionando ESP para novos jogadores que entrarem
Players.PlayerAdded:Connect(function(player)
    player.CharacterAdded:Connect(function()
        if espEnabled then
            wait(1) -- Aguarda o personagem carregar
            CreateESP(player)
        end
    end)
end)

-- Removendo ESP de jogadores que saem
Players.PlayerRemoving:Connect(function(player)
    if espObjects[player.Name] then
        espObjects[player.Name].Gui:Destroy()
        espObjects[player.Name] = nil
    end
end)



local Section = TrollTab:AddSection({
    Name = "Bring.."
})

--Bring

local targetPlayerName = ""

-- Bot√£o para realizar o Bring uma vez
TrollTab:AddButton({
	Name = "Bring Jogador",
	Callback = function()
		local player = game.Players.LocalPlayer
		local character = player.Character or player.CharacterAdded:Wait()
		local playerRootPart = character:FindFirstChild("HumanoidRootPart")

		-- Salva a posi√ß√£o original do jogador local
		local originalPosition = playerRootPart.CFrame

		-- Encontra o primeiro jogador com o nome que come√ßa com 'targetPlayerName'
		local targetPlayer = nil
		for _, p in pairs(game.Players:GetPlayers()) do
			if string.find(p.Name:lower(), targetPlayerName:lower()) == 1 then
				targetPlayer = p
				break
			end
		end

		if targetPlayer and targetPlayer.Character and targetPlayer.Character:FindFirstChild("HumanoidRootPart") then
			local humanoidRootPart = targetPlayer.Character.HumanoidRootPart

			-- Traz o jogador alvo para pr√≥ximo do jogador local
			humanoidRootPart.CFrame = playerRootPart.CFrame * CFrame.new(1, 0, -2) -- Ajuste de posi√ß√£o

			-- Monitora se o jogador alvo se senta e teletransporta ambos de volta para a posi√ß√£o original
			humanoidRootPart:GetPropertyChangedSignal("CFrame"):Connect(function()
				if targetPlayer.Character and targetPlayer.Character:FindFirstChild("Humanoid").Sit then
					playerRootPart.CFrame = originalPosition
					humanoidRootPart.CFrame = originalPosition
				end
			end)
		else
			warn("Jogador n√£o encontrado ou inacess√≠vel.")
		end
	end
})

-- Adiciona uma textbox para inserir o nome do jogador na aba Troll
TrollTab:AddTextbox({
	Name = "Nome do Jogador para Bring",
	Default = "",
	TextDisappear = true,
	Callback = function(playerName)
		targetPlayerName = playerName
	end
})

