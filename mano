local TrollingTab = Window:MakeTab({
    Name = "Trolling",
    Icon = "rbxassetid://4483345998",
    PremiumOnly = false,
})

TrollingTab:AddLabel("Aviso [!] Use Conforme Sua Responsabilidade")

local section = TrollingTab:AddSection("Selecione um M√©todo de Fling")

-- Dropdown para selecionar o m√©todo de kill
local killMethodDropdown = TrollingTab:AddDropdown("Selecionar M√©todo De Kill", {"Nenhum", "Couch"}, function(value)
    if value == "Couch" then
        local args = {"PickingTools", "Couch"}
        game:GetService("ReplicatedStorage").RE:FindFirstChild("1Too1l"):InvokeServer(unpack(args))
        print('Couch equipado!')
    else
        print("Nenhum m√©todo selecionado.")
    end
end)

-- Fun√ß√£o para flingar jogador
local function flingPlayer(targetPlayerName)
    local targetPlayer = game.Players:FindFirstChild(targetPlayerName)
    if targetPlayer and targetPlayer.Character and targetPlayer.Character:FindFirstChild("HumanoidRootPart") then
        game.Players.LocalPlayer.Character.HumanoidRootPart.CFrame = targetPlayer.Character.HumanoidRootPart.CFrame * CFrame.new(0, 2, 0)
    else
        print("Jogador alvo n√£o encontrado ou inv√°lido.")
    end
end

-- Dropdown para selecionar o jogador para fling
local playerDropdown = TrollingTab:AddDropdown("Selecione o Jogador para Fling", function(playerName)
    flingPlayer(playerName)
end)

-- Atualiza o dropdown com os jogadores no servidor
local function updatePlayerDropdown()
    local players = {}
    for _, player in pairs(game.Players:GetPlayers()) do
        if player.Name ~= game.Players.LocalPlayer.Name then
            table.insert(players, player.Name)
        end
    end
    playerDropdown:SetOptions(players)
end

game.Players.PlayerAdded:Connect(updatePlayerDropdown)
game.Players.PlayerRemoving:Connect(updatePlayerDropdown)

-- Atualiza o dropdown no in√≠cio
updatePlayerDropdown()

-- Fun√ß√£o para pegar item
local function grabItem(itemName)
    local args = {"PickingTools", itemName}
    local remoteFunction = game:GetService("ReplicatedStorage").RE:FindFirstChild("1Too1l")
    if remoteFunction then
        remoteFunction:InvokeServer(unpack(args))
    else
        warn("Fun√ß√£o remota '1Too1l' n√£o encontrada em ReplicatedStorage.RE")
    end
end

-- Bot√£o para pegar "Couch"
MainTab:AddButton("Pegar Couch", function()
    grabItem("Couch")
end)

-- Se√ß√£o de Prote√ß√£o
local ProtectionTab = Window:MakeTab({
    Name = "Protection",
    Icon = "rbxassetid://4483345998",
    PremiumOnly = false,
})

ProtectionTab:AddButton("Ativar Void Protection [V9]", function()
    game.Workspace.FallenPartsDestroyHeight = 0/0 -- Evita que partes caiam
    print("Void Protection ativada.")
end)

ProtectionTab:AddToggle("Ant Sit", false, function(value)
    local player = game.Players.LocalPlayer
    local humanoid = player.Character and player.Character.Humanoid
    if humanoid then
        humanoid:SetStateEnabled("Seated", not value)
    else
        print("Erro: Personagem n√£o encontrado.")
    end    
end)

-- Se√ß√£o de Teleportes
