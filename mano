local OrionLib = loadstring(game:HttpGet("https://raw.githubusercontent.com/shlexware/Orion/main/source"))()

local Window = OrionLib:MakeWindow({
    Name = "SHNMAXHUB | BROOKHAVEN RP",
    HidePremium = true,
})

local soundId = "rbxassetid://1836973601"

-- Fun√ß√£o para tocar o som
local function playSound()
    local sound = Instance.new("Sound")
    sound.SoundId = soundId
    sound.Parent = game.Workspace -- Coloque no Workspace para garantir que seja ouvido
    sound:Play()
end

-- Tocar o som assim que o script for executado
playSound()

local MainTab = Window:MakeTab({
    Name = "Welcome",
    Icon = "rbxassetid://4483345998",
    PremiumOnly = false,
})

-- Criando uma label para mostrar o n√∫mero de jogadores
local playerCountLabel = MainTab:AddLabel("Jogadores No Servidor: " .. #game.Players:GetPlayers())

-- Fun√ß√£o para atualizar o n√∫mero de jogadores quando algu√©m entra ou sai
local function updatePlayerCount()
    playerCountLabel.Text = "Jogadores No Servidor: " .. #game.Players:GetPlayers()
end

-- Conecta a fun√ß√£o ao evento de entrada de novos jogadores
game.Players.PlayerAdded:Connect(updatePlayerCount)
game.Players.PlayerRemoving:Connect(updatePlayerCount)

-- Atualiza a contagem de jogadores no in√≠cio (caso tenha jogadores ao carregar o script)
updatePlayerCount()

-- Atualiza a hora na TextLabel
local timeLabel = MainTab:AddLabel("Hora atual: ")

-- Fun√ß√£o para atualizar a hora
local function updateTime()
    while true do
        local currentTime = os.date("%H:%M:%S")
        timeLabel.Text = "Hora atual: " .. currentTime
        wait(1)
    end
end

-- Iniciando a atualiza√ß√£o da hora
coroutine.wrap(updateTime)()

-- Mensagens de boas-vindas
